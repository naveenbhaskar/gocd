const m = require('mithril');
const f = require('helpers/form_helper');

class ActionButtons {
  view(vnode) {
    let disabledClass = "";
    if (vnode.attrs.disabled) {
      disabledClass = "disabled";
    }
    return (
      <div className="btn-group plugin-actions">
        <f.link class={`btn edit-button ${disabledClass}`} onclick={vnode.attrs.disabled ? null : vnode.attrs.onEdit}
                title={vnode.attrs.title} arial-label="Edit"/>
        <f.link class={`btn clone-button ${disabledClass}`} onclick={vnode.attrs.disabled ? null : vnode.attrs.onClone}
                title={vnode.attrs.title}  arial-label="Clone "/>
        <f.link class="btn delete-button" onclick={vnode.attrs.onDelete}  arial-label="Delete"/>
      </div>
    );
  }
}

module.exports = ActionButtons;
